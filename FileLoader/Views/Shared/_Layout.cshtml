@using FileLoader.Controllers
<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark" style="background-color: #3b46ab">
        <div class="container">
            <a class="navbar-brand" href="@Url.Action("Index", "Home")">ГВЦ</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav mr-auto">
                    <li class="nav-item">
                        @Html.ActionLink("Главная", "Index", "Home", null, new { @class = "nav-link" })
                    </li>
                    @if (User.IsInRole("admin"))
                    {
                        <li class="nav-item">
                            @Html.ActionLink("Пользователи", "UserList", "Account", null, new { @class = "nav-link" })
                        </li>
                        <li class="nav-item">
                            @Html.ActionLink("Области", "Index", "Regions", null, new { @class = "nav-link" })
                        </li>
                        <li class="nav-item">
                            @Html.ActionLink("Районы", "Index", "Areas", null, new { @class = "nav-link" })
                        </li>
                        <li class="nav-item">
                            <a href="@Url.Action("Contact", "Home")" new class="nav-link">
                                Базы <span class="badge badge-pill badge-info" id="txtName"> </span>
                            </a>
                        </li>
                        @*<li class="nav-item">
                             @Html.ActionLink("Прогрессивный дизайн", "About", "Home", null, new { @class = "nav-link" })
                         </li>*@
                    }
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </nav>

    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            @if (DateTime.Now.Year == 2018)
            {
                <p>&copy; @DateTime.Now.Year Отдел программирования ГВЦ</p>
            }
            else
            {
                <p>&copy; 2018 - @DateTime.Now.Year Отдел программирования ГВЦ</p>
            }
        </footer>
    </div>


    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")

    <link href="~/Content/Chosen/chosen.min.css" rel="stylesheet" />
    <script src="~/Scripts/chosen.jquery.min.js"></script>

    @RenderSection("scripts", required: false)
</body>
</html>
<script>
    $(function () {
        $(document).ready(function () {
            $.ajax({
                type: "GET",
                url: "/Home/CountFiles",
                data: '{}',
                contextType: "application/json; charset=utf-8",
                dataType: "json",
                success: function (response) {
                    $("#txtName").text(response.result)
                },
                failure: function (response) {
                    alert(response);
                },
                error: function (response) {
                    alert(response.responseText);
                }
            });
        });
    });
</script>